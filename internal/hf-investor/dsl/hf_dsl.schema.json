{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/hf-investor/hf_dsl.schema.json",
  "title": "Hedge Fund Investor DSL",
  "type": "object",
  "properties": {
    "runbook_id": { "type": "string", "format": "uuid" },
    "as_of": { "type": "string", "format": "date-time" },
    "steps": {
      "type": "array",
      "items": { "$ref": "#/$defs/Step" },
      "minItems": 1
    }
  },
  "required": ["steps"],
  "$defs": {
    "Meta": {
      "type": "object",
      "properties": {
        "idempotency_key": { "type": "string", "minLength": 1 },
        "correlation_id": { "type": "string" },
        "causation_id": { "type": "string" }
      },
      "additionalProperties": false
    },
    "Step": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "verb": {
          "type": "string",
          "enum": [
            "investor.start-opportunity",
            "investor.record-indication",
            "kyc.begin",
            "kyc.collect-doc",
            "kyc.screen",
            "kyc.approve",
            "kyc.refresh-schedule",
            "screen.continuous",
            "tax.capture",
            "bank.set-instruction",
            "subscribe.request",
            "cash.confirm",
            "deal.nav",
            "subscribe.issue",
            "redeem.request",
            "redeem.settle",
            "offboard.close"
          ]
        },
        "params": { "type": "object" },
        "meta": { "$ref": "#/$defs/Meta" },
        "at": { "type": "string", "format": "date-time" }
      },
      "required": ["verb", "params"],
      "additionalProperties": false,
      "allOf": [
        {
          "if": { "properties": { "verb": { "const": "investor.start-opportunity" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/InvestorStartOpportunity" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "investor.record-indication" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/InvestorRecordIndication" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "kyc.begin" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/KycBegin" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "kyc.collect-doc" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/KycCollectDoc" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "kyc.screen" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/KycScreen" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "kyc.approve" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/KycApprove" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "kyc.refresh-schedule" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/KycRefreshSchedule" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "screen.continuous" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/ScreenContinuous" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "tax.capture" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/TaxCapture" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "bank.set-instruction" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/BankSetInstruction" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "subscribe.request" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/SubscribeRequest" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "cash.confirm" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/CashConfirm" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "deal.nav" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/DealNav" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "subscribe.issue" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/SubscribeIssue" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "redeem.request" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/RedeemRequest" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "redeem.settle" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/RedeemSettle" } }, "required": ["params"] }
        },
        {
          "if": { "properties": { "verb": { "const": "offboard.close" } } },
          "then": { "properties": { "params": { "$ref": "#/$defs/OffboardClose" } }, "required": ["params"] }
        }
      ]
    },

    "InvestorStartOpportunity": {
      "type": "object",
      "properties": {
        "legal_name": { "type": "string", "minLength": 1 },
        "investor_type": { "type": "string" },
        "domicile": { "type": "string", "pattern": "^[A-Z]{2}$" },
        "channel": { "type": "string" }
      },
      "required": ["legal_name"],
      "additionalProperties": false
    },

    "InvestorRecordIndication": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "fund_id": { "type": "string", "format": "uuid" },
        "share_class_id": { "type": "string", "format": "uuid" },
        "indicative_amount": { "type": "number", "exclusiveMinimum": 0 },
        "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
        "target_date": { "type": "string", "format": "date" }
      },
      "required": ["investor_id", "fund_id", "share_class_id", "indicative_amount", "currency"],
      "additionalProperties": false
    },

    "KycBegin": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "jurisdiction": { "type": "string", "pattern": "^[A-Z]{2}$" },
        "program_code": { "type": "string" },
        "due_date": { "type": "string", "format": "date" }
      },
      "required": ["investor_id", "jurisdiction"],
      "additionalProperties": false
    },

    "KycCollectDoc": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "doc_type": { "type": "string" },
        "document_id": { "type": "string", "format": "uuid" },
        "requirement_id": { "type": "string", "format": "uuid" }
      },
      "required": ["investor_id", "doc_type"],
      "additionalProperties": false
    },

    "KycScreen": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "vendor": { "type": "string" },
        "mode": { "type": "string", "enum": ["initial", "refresh"] },
        "case_ref": { "type": "string" }
      },
      "required": ["investor_id", "mode"],
      "additionalProperties": false
    },

    "KycApprove": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "decision": { "type": "string", "enum": ["APPROVE", "REJECT"] },
        "reason": { "type": "string" },
        "approver": { "type": "string" }
      },
      "required": ["investor_id", "decision"],
      "additionalProperties": false
    },

    "KycRefreshSchedule": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "frequency": { "type": "string", "description": "ISO 8601 duration e.g. P1Y" },
        "next_date": { "type": "string", "format": "date" },
        "risk_rating": { "type": "integer", "minimum": 1, "maximum": 5 }
      },
      "required": ["investor_id", "frequency"],
      "additionalProperties": false
    },

    "ScreenContinuous": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "enable": { "type": "boolean" }
      },
      "required": ["investor_id", "enable"],
      "additionalProperties": false
    },

    "TaxCapture": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "form_type": { "type": "string" },
        "tin": { "type": "string" },
        "country": { "type": "string", "pattern": "^[A-Z]{2}$" },
        "effective_date": { "type": "string", "format": "date" },
        "expiry_date": { "type": "string", "format": "date" }
      },
      "required": ["investor_id", "form_type"],
      "additionalProperties": false
    },

    "BankSetInstruction": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
        "bank_name": { "type": "string" },
        "beneficiary_name": { "type": "string" },
        "account_number": { "type": "string" },
        "iban": { "type": "string" },
        "swift": { "type": "string" },
        "effective_date": { "type": "string", "format": "date" }
      },
      "required": ["investor_id", "currency"],
      "additionalProperties": false
    },

    "SubscribeRequest": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "fund_id": { "type": "string", "format": "uuid" },
        "share_class_id": { "type": "string", "format": "uuid" },
        "amount": { "type": "number", "exclusiveMinimum": 0 },
        "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
        "dealing_date": { "type": "string", "format": "date" }
      },
      "required": ["investor_id", "fund_id", "share_class_id", "amount", "currency"],
      "additionalProperties": false
    },

    "CashConfirm": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "fund_id": { "type": "string", "format": "uuid" },
        "amount": { "type": "number", "exclusiveMinimum": 0 },
        "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
        "value_date": { "type": "string", "format": "date" },
        "reference": { "type": "string" }
      },
      "required": ["investor_id", "fund_id", "amount", "currency", "value_date"],
      "additionalProperties": false
    },

    "DealNav": {
      "type": "object",
      "properties": {
        "fund_id": { "type": "string", "format": "uuid" },
        "share_class_id": { "type": "string", "format": "uuid" },
        "dealing_date": { "type": "string", "format": "date" },
        "nav_per_unit": { "type": "number", "exclusiveMinimum": 0 },
        "fx_rate": { "type": "number", "exclusiveMinimum": 0 }
      },
      "required": ["fund_id", "share_class_id", "dealing_date", "nav_per_unit"],
      "additionalProperties": false
    },

    "SubscribeIssue": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "fund_id": { "type": "string", "format": "uuid" },
        "share_class_id": { "type": "string", "format": "uuid" },
        "series_id": { "type": "string", "format": "uuid" },
        "units": { "type": "number", "exclusiveMinimum": 0 },
        "nav_per_unit": { "type": "number", "exclusiveMinimum": 0 },
        "value_date": { "type": "string", "format": "date" },
        "trade_id": { "type": "string", "format": "uuid" },
        "event_key": { "type": "string", "minLength": 1 }
      },
      "required": ["investor_id", "fund_id", "share_class_id", "units", "nav_per_unit", "value_date", "event_key"],
      "additionalProperties": false
    },

    "RedeemRequest": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "fund_id": { "type": "string", "format": "uuid" },
        "share_class_id": { "type": "string", "format": "uuid" },
        "units": { "type": "number", "exclusiveMinimum": 0 },
        "amount": { "type": "number", "exclusiveMinimum": 0 },
        "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
        "dealing_date": { "type": "string", "format": "date" }
      },
      "anyOf": [
        { "required": ["units"] },
        { "required": ["amount", "currency"] }
      ],
      "required": ["investor_id", "fund_id", "share_class_id"],
      "additionalProperties": false
    },

    "RedeemSettle": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "fund_id": { "type": "string", "format": "uuid" },
        "share_class_id": { "type": "string", "format": "uuid" },
        "units": { "type": "number", "exclusiveMinimum": 0 },
        "nav_per_unit": { "type": "number", "exclusiveMinimum": 0 },
        "value_date": { "type": "string", "format": "date" },
        "trade_id": { "type": "string", "format": "uuid" },
        "event_key": { "type": "string", "minLength": 1 }
      },
      "required": ["investor_id", "fund_id", "share_class_id", "units", "nav_per_unit", "value_date", "event_key"],
      "additionalProperties": false
    },

    "OffboardClose": {
      "type": "object",
      "properties": {
        "investor_id": { "type": "string", "format": "uuid" },
        "reason": { "type": "string" }
      },
      "required": ["investor_id"],
      "additionalProperties": false
    }
  }
}